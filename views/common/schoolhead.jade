header(style="height:160px")
    .nav-top
        .nav-list
            ul.navs
                li
                    a(href='/') 首页
                li
                    a(href='/schools/') 校区
                li
                    a(href='/courses/') 课程
                li
                    a(href='/infos/') 资讯
                li
                    a(href='/cooperation/') 合作
    .nav-center
        .school-image

            a(href='/schools/#{data.school_id}/')
                img(width='100%', height='100%', src='#{data.cdnUrl}/static/images/logo.png')

        .search
            span#subject.score 课程
            img(style='vertical-align: middle', src='#{data.cdnUrl}/static/images/filter.png', alt='')
            form.input(action='')
                input(type='text', placeholder='search for what')
            .icon
                img(src='#{data.cdnUrl}/static/images/searchfor.png', alt='')
    .nav-bottom
        .school-nav
            ul(style="pointer-events:auto")
                li.left(style='font-size: 15px')
                    a(href='/orgs/#{data.org_id}/schools/#{data.school_id}/school_settings/preview/') 校区主页
                li.left(style='font-size: 15px')
                    a(href='/orgs/#{data.org_id}/schools/#{data.school_id}/school_settings/preview/course_list/') 课程
                li.left(style='font-size: 15px')
                    a(href='/orgs/#{data.org_id}/schools/#{data.school_id}/school_settings/preview/teacher_list/') 师资团队

